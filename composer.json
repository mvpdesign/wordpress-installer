{
    "name": "mvpdesign/wordpress-installer",
    "description": "WordPress installer",
    "keywords": [
        "wordpress", "installer", "composer"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Brock Riemenschneider",
            "email": "brock@mvpdesign.com",
            "homepage": "https://github.com/BsWiM"
        },
        {
            "name": "Chris Wilson",
            "email": "chrisw@mvpdesign.com",
            "homepage": "https://github.com/heychris"
        }
    ],
    "require-dev": {
        "phpspec/phpspec": "~2.0"
    },
    "require": {
        "php": ">=5.3.4",
        "composer/composer": "1.0.*@dev"
    },
    "config": {
        "bin-dir": "bin",
        "generate-salts": true
    },
    "scripts": {
        "post-root-package-install": ["Installer::run"]
    },
    "autoload": {
        "psr-0": {
            "": "src"
        },
        "psr-4": {
            "": ""
        }
    }
}
